<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="success" Color="Green"/>
    <SolidColorBrush x:Key="warning" Color="DarkGoldenrod"/>
    <SolidColorBrush x:Key="error" Color="Red"/>

    <Style x:Key="solid-icon" TargetType="Run">
        <Setter Property="FontFamily" Value="{StaticResource fa-solid}"/>
    </Style>
    
    <Style x:Key="check-icon" TargetType="Run" BasedOn="{StaticResource solid-icon}">
        <Setter Property="Text" Value="&#xf00c;"/>
    </Style>
    <Style x:Key="times-icon" TargetType="Run" BasedOn="{StaticResource solid-icon}">
        <Setter Property="Text" Value="&#xf00d;"/>
    </Style>
    <Style x:Key="cog-icon" TargetType="Run" BasedOn="{StaticResource solid-icon}">
        <Setter Property="Text" Value="&#xf013;"/>
    </Style>
    <Style x:Key="info-icon" TargetType="Run" BasedOn="{StaticResource solid-icon}">
        <Setter Property="Text" Value="&#xf129;"/>
    </Style>
    <Style x:Key="envelope-icon" TargetType="Run" BasedOn="{StaticResource solid-icon}">
        <Setter Property="Text" Value="&#xf0e0;"/>
    </Style>
</ResourceDictionary>